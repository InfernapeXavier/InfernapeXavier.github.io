# Taps
tap "homebrew/bundle"
tap "homebrew/core"
tap "homebrew/cask"

# Development tools
brew "git"               # Version control
brew "node"             # Node.js runtime
brew "yarn"             # Package manager
brew "ripgrep"          # Fast search tool
brew "fd"               # Fast find alternative
brew "tree"             # Directory structure viewer
brew "jq"               # JSON processor

# Optional but recommended
brew "gh"               # GitHub CLI
brew "fnm"              # Fast Node Manager
brew "watchman"         # File watching service (useful for Next.js)
